<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity"
    android:background="@color/white">

    <TextView

        android:id="@+id/selectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категория"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/selectCategory">

        <ImageView
            android:id="@+id/card1"
            android:layout_width="170dp"
            android:layout_height="170dp"
     android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="120dp"
            android:background="@drawable/card1"></ImageView>
        <ImageView
            android:id="@+id/card2"
            android:layout_marginVertical="120dp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/card2"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layout">

        <ImageView
            android:id="@+id/card3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="25dp"

            android:background="@drawable/card3"></ImageView>
        <ImageView
            android:id="@+id/card4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/card4"></ImageView>


    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:textColor="@color/white"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        ></Button>

</RelativeLayout>

